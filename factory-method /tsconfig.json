{
    "compilerOptions": {
        /* Language and Environment */
        "target": "es2016" /* Set the JavaScript language version for emitted JavaScript */,
        "module": "commonjs" /* Specify the module code generated */,
        "esModuleInterop": true /* Enable compatibility with CommonJS modules */,
        "forceConsistentCasingInFileNames": true /* Ensure consistent casing in imports */,

        /* Emit */
        "outDir": "./dist" /* Specify the output folder for emitted files */,
        "sourceMap": true /* Enable source map generation for debugging */,
        "removeComments": true /* Remove comments from emitted JavaScript */,

        /* Type Checking */
        "strict": true /* Enable strict type-checking options */,
        "skipLibCheck": true /* Skip checking declaration files */
    },

    /* Include all TypeScript files in the src folder */
    "include": ["src/**/*.ts"],

    /* Exclude node_modules to avoid unnecessary processing */
    "exclude": ["node_modules"]
}
